[app]

# عنوان برنامه
title = English Quiz

# نام بسته (package name)
package.name = englishquiz

# دامنه معکوس برای نام بسته
package.domain = org.example

# نسخه برنامه (به فرمت X.Y.Z)
version = 1.0.0

# نسخه کد (باید عدد صحیح باشد)
version.code = 1

# نویسنده
author = Your Name

# مسیر فایل اصلی
source.dir = .

# نام فایل اصلی
source.main = main.py

# نیازمندی‌های پایتون
requirements = python3,kivy

# نسخه پایتون
python.version = 3.8

# سیستم عامل هدف
osx.arch = x86_64
android.api = 30
android.minapi = 21
android.ndk = 23b
android.sdk = 31
android.ndk_path = 
android.sdk_path = 

# مجوزهای اندروید
android.permissions = INTERNET

# ویژگی‌های اندروید
android.features = 

# آیکون برنامه
#icon.filename = %(source.dir)s/data/icon.png

# تصویر splash screen
#presplash.filename = %(source.dir)s/data/presplash.png

# جهت صفحه نمایش
orientation = portrait

# حالت نمایش کامل
fullscreen = 0

# شامل کردن تنظیمات پیشرفته
[buildozer]

# مسیر log
log_level = 2

